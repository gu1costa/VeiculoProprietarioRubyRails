<% content_for :title, "Editar Propriet√°rio - DETRAN" %>
<% content_for :header_title, "Editar Propriet√°rio" %>

<% content_for :header_actions do %>
  <%= link_to "‚Üê Voltar para Lista", proprietarios_path, class: "back-btn" %>
<% end %>

<div class="page-center">
  <h2 class="page-heading">Atualizar Dados do Propriet√°rio</h2>

  <!-- CARD: Dados do propriet√°rio -->
  <div class="panel">
    <div class="panel-head">
      <h3>Informa√ß√µes do Propriet√°rio</h3>
    </div>

    <div class="panel-body">
      <%= form_with model: @proprietario, local: true do |f| %>
        <% if @proprietario.errors.any? %>
          <div class="alert alert-error">
            <strong>N√£o foi poss√≠vel salvar:</strong>
            <ul style="margin-left:18px;margin-top:8px;">
              <% @proprietario.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <label>CPF/CNPJ <span class="required">*</span></label>
          <%= f.text_field :cpf_cnpj, class: "form-control", maxlength: 14, required: true, inputmode: "numeric" %>
        </div>

        <div class="form-group">
          <label>Nome Completo <span class="required">*</span></label>
          <%= f.text_field :nome, class: "form-control", maxlength: 100, required: true %>
        </div>

        <div class="form-group">
          <label>Endere√ßo Completo <span class="required">*</span></label>
          <%= f.text_field :endereco, class: "form-control", required: true %>
        </div>

        <div class="panel-actions">
          <%= f.submit "üíæ Salvar Altera√ß√µes", class: "btn" %>
          <%= link_to "Cancelar", proprietarios_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- CARD: Ve√≠culos -->
  <div class="panel">
    <div class="panel-head">
      <h3>Ve√≠culos Cadastrados</h3>
    </div>

    <div class="panel-body">
      <% if @proprietario.veiculos.any? %>
        <div class="vehicle-list">
          <% @proprietario.veiculos.order(:id).each do |v| %>
            <div class="vehicle-item">
              <div class="vehicle-left">
                <div class="vehicle-plate">
                  <span class="vehicle-icon">üöó</span>
                  <strong><%= v.placa %></strong>
                </div>
                <div class="vehicle-sub">RENAVAM: <%= v.renavam %></div>
              </div>

              <div class="vehicle-actions">
                <%= link_to "‚úèÔ∏è Editar",
                            edit_proprietario_veiculo_path(@proprietario, v),
                            class: "btn btn-sm btn-secondary" %>

                <%= button_to "üóëÔ∏è Remover",
                              proprietario_veiculo_path(@proprietario, v),
                              method: :delete,
                              form: { class: "inline-form" },
                              class: "btn btn-sm btn-danger",
                              data: { turbo_confirm: "Deseja realmente remover este ve√≠culo?" } %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="empty-state">
          <strong>Nenhum ve√≠culo cadastrado para este propriet√°rio.</strong>
        </div>
      <% end %>

      <% if @veiculo&.errors&.any? %>
        <div class="alert alert-error">
          <strong>N√£o foi poss√≠vel salvar:</strong>
          <ul style="margin-left: 18px; margin-top: 8px;">
            <% @veiculo.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>


      <!-- Adicionar novo ve√≠culo (inline) -->
      <div class="add-vehicle">
        <div class="add-vehicle-title">‚ûï Adicionar Novo Ve√≠culo</div>

        <%= form_with model: [@proprietario, @proprietario.veiculos.build], local: true do |f| %>
          <div class="form-row">
            <div class="form-group">
              <label>Placa <span class="required">*</span></label>
              <%= f.text_field :placa, class: "form-control", maxlength: 7, placeholder: "EX: ABC1D23", required: true, id: "placa_inline" %>
            </div>

            <div class="form-group">
              <label>RENAVAM <span class="required">*</span></label>
              <%= f.text_field :renavam, class: "form-control", maxlength: 11, placeholder: "Ex: 12345678901", required: true, inputmode: "numeric", id: "renavam_inline" %>
            </div>
          </div>

          <div class="panel-actions" style="padding-top: 0; border-top: 0;">
            <%= f.submit "‚ûï Adicionar Ve√≠culo", class: "btn" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>

<script>
    document.getElementById('renavam_inline')?.addEventListener('input', (e) => {
        e.target.value = e.target.value.replace(/\D/g, '');
    });
    document.getElementById('placa_inline')?.addEventListener('input', (e) => {
        e.target.value = e.target.value.toUpperCase().replace(/[^A-Z0-9]/g, '');
    });
</script>
